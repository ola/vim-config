set nobackup
set nowrap

" Set tabs, indents etc.
set softtabstop=2
set tabstop=2
set shiftwidth=2
set expandtab

set autoindent
set smartindent

" backspace and cursor keys wrap to previous/next line
set backspace=indent,eol,start whichwrap+=<,>,[,]
set wildignore+=*.o,*.obj,*.class,*.dll,.git,.hg,*.jar,target/**

set fileformat=unix
set encoding=utf-8

set listchars=tab:▸\ ,eol:¬

set autoread
